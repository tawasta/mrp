<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_component_change_message_confirm_wizard_form" model="ir.ui.view">
        <field name="name">mrp.component.change.message.confirm.wizard.form</field>
        <field name="model">mrp.component.change.message.confirm.wizard</field>
        <field name="arch" type="xml">
            <form id="change_message_confirm_wizard_form">
                <p>
                    Are you sure you want to change these components?
                </p>
                <field name="bom_line_ids" invisible="1" />
                <field name="product_id" invisible="1" />
                <footer>
                    <button
                        string="Change"
                        type="object"
                        class="oe_highlight"
                        name="change"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
