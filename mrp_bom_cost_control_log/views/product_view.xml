<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.control.lines</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='inventory']/group[@name='inventory']"
                position="inside"
            >
                <field name="mrp_control_log_ids" invisible="1" />
            </xpath>

            <div name="button_box" position="inside">
                <button
                    type="object"
                    name="action_product_bom_cost_log"
                    attrs="{'invisible':[('mrp_control_log_count', '=', 0)]}"
                    class="oe_stat_button"
                    icon="fa-cubes"
                >
                    <field
                        string="BoM cost logs"
                        name="mrp_control_log_count"
                        widget="statinfo"
                    />
                </button>
            </div>
        </field>
    </record>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.compute.control.lines</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field name="compute_control_logs" />
            </field>
        </field>
    </record>
</odoo>
