<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_equipment_view_form" model="ir.ui.view">
        <field name="name">equipment.form.brand</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
        <field name="arch" type="xml">
            <field name="model" position="after">
                <field name="brand" />
                <field name="model_year" />
            </field>

            <field name="location" position="after">
                <field name="location_category_id" />
                <field name="workcenter_id" invisible="1" />
                <field name="code" />
            </field>

            <field name="location" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <field name="warranty_date" position="after">
                <field name="dust_removal" />
                <field name="compressed_air" />
                <field name="machine_purpose" />
            </field>
        </field>
    </record>

    <record id="hr_equipment_view_tree" model="ir.ui.view">
        <field name="name">equipment.tree.hide.columns</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_tree" />
        <field name="arch" type="xml">
            <field name="assign_date" position="after">
                <field name="code" />
                <field name="location" invisible="1" />
                <field name="location_category_id" />
            </field>

            <field name="assign_date" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>

            <field name="technician_user_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>

            <field name="category_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>

            <field name="company_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
        </field>
    </record>

    <record id="maintenance_equipment_view_tree_inherit_hr" model="ir.ui.view">
        <field name="name">equipment.tree.hide.columns.employee</field>
        <field name="model">maintenance.equipment</field>
        <field
            name="inherit_id"
            ref="hr_maintenance.maintenance_equipment_view_tree_inherit_hr"
        />
        <field name="arch" type="xml">
            <field name="employee_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>

            <field name="department_id" position="attributes">
                <attribute name="optional">hide</attribute>
            </field>
        </field>
    </record>
</odoo>
