<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_mrp_bom_line" inherit_id="mrp.report_mrp_bom_line">
        <xpath
            expr='//t[@t-if="data[&apos;operations&apos;]"]//td[@groups="uom.group_uom"]/span'
            position="attributes"
        >
            <attribute name="t-if">1 == 0</attribute>
        </xpath>

        <xpath
            expr='//t[@t-if="data[&apos;operations&apos;]"]//td[@groups="uom.group_uom"]'
            position="inside"
        >
            <span>mm:ss</span>
        </xpath>
    </template>

    <template id="report_mrp_operation_line" inherit_id="mrp.report_mrp_operation_line">
        <xpath expr='//td[@groups="uom.group_uom"]/span' position="attributes">
            <attribute name="t-if">1 == 0</attribute>
        </xpath>

        <xpath expr='//td[@groups="uom.group_uom"]' position="inside">
            <span>mm:ss</span>
        </xpath>
    </template>
</odoo>
