<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_routing_workcenter_form_view" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.form.durations</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view" />
        <field name="arch" type="xml">
            <field name="bom_id" position="after">
                <field name="bom_consu" invisible="1" />
                <field name="person_count" />
            </field>

            <label for="time_cycle_manual" position="attributes">
                <attribute name="string">Default Duration</attribute>
            </label>

            <field name="time_cycle_manual" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <xpath expr="//field[@name='time_cycle_manual']/.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <label for="time_cycle_manual" position="after">
                <div
                    attrs="{'invisible':  [('time_mode', '=', 'auto'), ('workorder_count', '!=' , 0)]}"
                >
                    <field
                        name="time_cycle_manual"
                        widget="float_time"
                        class="oe_inline"
                    /> mm:ss
                </div>
            </label>

            <xpath expr="//field[@name='time_cycle_manual']/.." position="after">
                <label for="duration_passive" string="Passive Duration" />
                <div>
                    <field
                        name="duration_passive"
                        widget="float_time"
                        class="oe_inline"
                    /> mm:ss
                </div>
                <label for="duration_active" string="Active Duration" />
                <div>
                    <field
                        name="duration_active"
                        widget="float_time"
                        class="oe_inline"
                    /> mm:ss
                </div>
                <label for="duration_total" string="Total Duration" />
                <div>
                    <field
                        name="duration_total"
                        widget="float_time"
                        class="oe_inline"
                    /> mm:ss
                </div>
                <label
                    for="duration_person"
                    string="Personnel working time"
                    invisible="1"
                />
                <div invisible="1">
                    <field
                        name="duration_person"
                        widget="float_time"
                        class="oe_inline"
                    /> mm:ss
                </div>
            </xpath>
        </field>
    </record>

    <record id="mrp_routing_workcenter_tree_view" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree.duration.minutes</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view" />
        <field name="arch" type="xml">
            <field name="time_cycle" position="attributes">
                <attribute name="string">Duration (mm:ss)</attribute>
            </field>
        </field>
    </record>
</odoo>
