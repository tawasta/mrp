<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_workcenter_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.form.eco</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='time_stop']/.." position="after">
                <group string="Energy and Machines">
                    <field name="energy_consumption" />
                    <field name="energy_consumption_passive" />
                    <field name="bom_consu" />
                    <field name="maintenance_id" />
                    <field name="checked" />
                    <field name="work_type" />
                    <field name="electric_consumption" />
                </group>
            </xpath>

            <field name="code" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <field name="time_start" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>

            <field name="time_stop" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>

            <field name="alternative_workcenter_ids" position="after">
                <field name="code" string="Work Center number" />
                <field name="category_id" />
                <field name="workcenter_upper_id" />
                <field name="workcenter_lower_exist" invisible="1" />
                <field
                    name="workcenter_lower_id"
                    attrs="{'invisible': [('workcenter_lower_exist', '=', False)]}"
                >
                    <tree>
                        <field name="code" string="Work Center number" />
                        <field name="name" />
                    </tree>
                </field>
            </field>

            <sheet position="after">
                <div class="oe_chatter" />
            </sheet>
        </field>
    </record>
</odoo>
