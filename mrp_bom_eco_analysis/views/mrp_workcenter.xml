<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_workcenter_view" model="ir.ui.view">
        <field name="name">mrp.workcenter.form.eco</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='time_stop']/.." position="after">
                <group string="ECO information">
                    <field name="energy_consumption" />
                    <field name="bom_consu" />
                    <field name="maintenance_id" />
                    <field name="checked" />
                </group>
            </xpath>

            <field name="code" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <field name="alternative_workcenter_ids" position="after">
                <field name="code" />
                <field name="category_id" />
            </field>

            <sheet position="after">
                <div class="oe_chatter" />
            </sheet>
        </field>
    </record>
</odoo>
