<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="mrp_bom_form_view" model="ir.ui.view">
		<field name="name">mrp.bom.form.line.colours.cost</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="mrp.mrp_bom_form_view" />
		<field name="arch" type="xml">
            <xpath expr="//notebook//field[@name='bom_line_ids']//tree//field[@name='primary_vendor_price']" position="attributes">
                <attribute name="options">{"fg_color": "red: primary_vendor_price == 0"}</attribute>
            </xpath>
		</field>
	</record>

	<record id="mrp_bom_cost_mrp_bom_form" model="ir.ui.view">
		<field name="name">mrp.bom.cost.color</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="mrp_bom_product_cost.mrp_bom_cost_mrp_bom_form" />
		<field name="arch" type="xml">
            <field name="component_cost" position="after">
                <field name="bom_line_vendor_price_is_zero" invisible="1"/>
            </field>
            <field name="component_cost" position="attributes">
                <attribute name="decoration-danger">bom_line_vendor_price_is_zero</attribute>
            </field>
		</field>
	</record>
</odoo>
