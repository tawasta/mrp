<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_routing_workcenter_tree_view" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree.operation.template</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="template_id" string="Template" />
                <field name="company_id" invisible="1" />
            </field>
            <xpath expr="//tree" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>
        </field>
    </record>

    <record id="mrp_routing_workcenter_tree_view_to_open" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree.to.open</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="arch" type="xml">
            <tree string="Routing Work Centers">
                <field name="sequence" invisible="1" />
                <field name="name" />
                <field name="workcenter_id" />
                <field
                    name="time_cycle"
                    widget="float_time"
                    string="Duration (minutes)"
                    sum="Total Duration"
                    width="1.5"
                />
            </tree>
        </field>
    </record>

    <record id="mrp.mrp_routing_action" model="ir.actions.act_window">
        <field
            name="view_ids"
            eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('mrp_routing_workcenter_tree_view_to_open')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('mrp.mrp_routing_workcenter_form_view')})]"
        />
    </record>
</odoo>
