<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.alternative.multiplier</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='bom_line_ids']//field[@name='product_qty']"
                position="before"
            >
                <field
                    name="alt_qty"
                    optional="hide"
                    groups="base.group_system,mrp_bom_structure_xlsx_recursive.lca_manager"
                />
            </xpath>
        </field>
    </record>
</odoo>
