<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="bom_structure_xlsx_wizard" model="ir.ui.view">
        <field name="model">bom.structure.xlsx.wizard</field>
        <field name="arch" type="xml">
            <form string="Print LCA excel">
                <group>
                    <field
                        name="product_id"
                        attrs="{'invisible': [('multi_print', '=', True)]}"
                    />
                    <field name="product_tmpl_id" invisible="1" />
                    <field name="multi_print" invisible="1" />
                </group>
                <footer>
                    <button
                        string="Print LCA excel"
                        type="object"
                        class="oe_highlight"
                        name="print_boms"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bom_structure_xlsx_wizard" model="ir.actions.act_window">
        <field name="name">Print LCA excel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bom.structure.xlsx.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="bom_structure_xlsx_wizard" />
        <field name="binding_model_id" ref="mrp.model_mrp_bom" />
    </record>
</odoo>
