<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_import_bom" model="ir.actions.act_window">
        <field name="name">Import BoM</field>
        <field name="res_model">import.xlsx.wizard</field>
<!--         <field name="binding_view_types">form</field> -->
        <field name="binding_model_id" eval="False" />
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field eval="False" name="view_id" />
        <field name="context">{
            'template_domain': [('res_model', '=', 'mrp.bom'),
                                ('fname', '=', 'import_flat_bom.xlsx'),
                                ('gname', '=', False)], }
        </field>
    </record>

    <menuitem
        id="menu_import_bom"
        parent="mrp.menu_mrp_bom"
        action="action_import_bom"
        sequence="30"
    />
</odoo>
