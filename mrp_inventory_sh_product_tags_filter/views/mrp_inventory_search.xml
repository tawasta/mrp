<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record id="mrp_inventory_search" model="ir.ui.view">
		<field name="name">mrp.inventory.search.sh_product_tag</field>
		<field name="model">mrp.inventory</field>
		<field name="inherit_id" ref="mrp_multi_level.mrp_inventory_search" />
		<field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="sh_product_tag_ids"/>
            </field>
            <group expand="0">
                <filter name="group_sh_product_tag_ids"
                        string="Tags"
                        domain="[]"
                        context="{'group_by':'sh_product_tag_ids'}"/>
            </group>
		</field>
	</record>
</odoo>
