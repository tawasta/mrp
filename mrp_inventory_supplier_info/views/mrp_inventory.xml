<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_inventory_supplier_info_list" model="ir.ui.view">
        <field name="name">mrp.inventory.supplier.info.list</field>
        <field name="model">mrp.inventory</field>
        <field name="inherit_id" ref="mrp_multi_level.mrp_inventory_tree"/>
        <field name="arch" type="xml">
            <field name="supply_method" position="after">
                <field name="supplier_name"></field>
            </field>
        </field>
    </record>

    <record id="mrp_inventory_supplier_info_form" model="ir.ui.view">
        <field name="name">mrp.inventory.supplier.info.form</field>
        <field name="model">mrp.inventory</field>
        <field name="inherit_id" ref="mrp_multi_level.mrp_inventory_form"/>
        <field name="arch" type="xml">
            <field name="supply_method" position="after">
                <field name="supplier_info"></field>
            </field>
        </field>
    </record>
</odoo>
