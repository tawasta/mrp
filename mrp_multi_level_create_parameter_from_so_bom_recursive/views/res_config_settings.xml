<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.sale.create.mrp.parameter</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="invoice_delivery_addresses" position="before">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="create_mrp_parameters_on_confirm"
                >
                    <div class="o_setting_left_pane">
                        <field name="create_mrp_parameters_on_confirm" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="create_mrp_parameters_on_confirm" />
                        <div class="text-muted">
                            Create Product MRP Area Parameters on SO confirm
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
