<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_open_product_report_wizard" model="ir.ui.view">
        <field name="model">open.product.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Open a turnover report">
                <p>Choose the number of days</p>
                <field name="number_of_days" />
                <p>Product (optional)</p>
                <field name="product_id" />
                <p>Product category (optional)</p>
                <field name="product_category_id" />
                <p>Company (optional)</p>
                <field name="company_id" widget="selection" class="col-2" />
                <p>ABC profile (optional)</p>
                <field name="abc_profile_id" />
                <p>ABC level (optional)</p>
                <field
                    name="abc_level_ids"
                    domain="[('profile_id', '=', abc_profile_id)]"
                    widget="many2many_tags"
                />
                <footer>
                    <button
                        string="Calculate"
                        type="object"
                        class="oe_highlight"
                        name="forecast_open_report"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_product_report" model="ir.actions.act_window">
        <field name="name">Number of days</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">open.product.report.wizard</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
        <field
            name="binding_model_id"
            ref="mrp_multi_level_inventory_qty.model_product_report"
        />
    </record>
</odoo>
