<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="action_mrp_production_mass_cancel_wizard" model="ir.ui.view">
        <field name="model">mrp.production.mass.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel Production Orders">
                <p>The selected orders will be cancelled</p>
                <footer>
                    <button string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"/>
                    or
                    <button string="Cancel"
                        class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_mrp_production_mass_cancel">
        <field name="name">Cancel Production Orders</field>
        <field name="res_model">mrp.production.mass.cancel</field>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
