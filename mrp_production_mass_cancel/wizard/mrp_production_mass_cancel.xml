<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="action_mrp_production_mass_cancel_wizard" model="ir.ui.view">
        <field name="model">mrp.production.mass.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel Production Orders">
                <p>The selected orders will be cancelled</p>
                <footer>
                    <button string="Confirm"
                        type="object"
                        class="oe_highlight"
                        name="confirm"/>
                    or
                    <button string="Cancel"
                        class="oe_link"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_mrp_production_mass_cancel"
            multi="True"
            key2="client_action_multi" name="Cancel Production Orders"
            res_model="mrp.production.mass.cancel" src_model="mrp.production"
            view_mode="form" target="new" view_type="form"
            groups="mrp.group_mrp_manager"/>
</odoo>
