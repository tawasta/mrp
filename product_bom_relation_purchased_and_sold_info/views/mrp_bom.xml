<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="mrp_bom_tree_view" model="ir.ui.view">
        <field name="name">mrp.bom.tree.bom.rel.purchase.sold.count</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="bom_rel_purchase_count" invisible="not context.get('active_model')"/>
                <field name="bom_rel_sold_count" invisible="not context.get('active_model')"/>
            </xpath>
        </field>
    </record>
</odoo>
